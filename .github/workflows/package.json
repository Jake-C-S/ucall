{
  "devDependencies": {
    "@semantic-release/exec": "github:semantic-release/exec",
    "conventional-changelog-eslint": "^3.0.9",
    "semantic-release": "^20.1.3"
  },
  "release": {
    "branches": [
      "main"
    ],
    "debug": true,
    "ci": true,
    "dryRun": false,
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "eslint",
          "releaseRules": [
            {
              "tag": "Add",
              "release": "minor"
            },
            {
              "tag": "Improve",
              "release": "minor"
            },
            {
              "tag": "Optimze",
              "release": "patch"
            },
            {
              "tag": "Make",
              "release": "patch"
            },
            {
              "tag": "Refactor",
              "release": false
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "eslint",
          "releaseRules": [
            {
              "tag": "Add",
              "release": "minor"
            },
            {
              "tag": "Improve",
              "release": "minor"
            },
            {
              "tag": "Optimze",
              "release": "patch"
            },
            {
              "tag": "Make",
              "release": "patch"
            },
            {
              "tag": "Refactor",
              "release": false
            }
          ]
        }
      ],
      "@semantic-release/github"
    ],
    "prepare": [
      {
        "path": "@semantic-release/exec",
        "cmd": "echo ${nextRelease.version} > ../../VERSION && git commit -am 'Build: Bump Version' && git push"
      }
    ]
  }
}